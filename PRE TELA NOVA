# Ações para os botões
def acao_botao1():
    print("Botão 1 pressionado")

def acao_botao2():
    print("Botão 2 pressionado")

def acao_botao3():
    print("Botão 3 pressionado")

# Função para mudar para a tela principal
def mudar_para_tela_principal():
    global tela_atual
    tela_atual = "principal"

# Função para mudar para a tela terciária
def mudar_para_tela_terciaria():
    global tela_atual
    tela_atual = "terciaria"

# Função para mudar para a tela quaternária
def mudar_para_tela_quaternaria():
    global tela_atual
    tela_atual = "quaternaria"

# Função para mudar para a tela quintenária
def mudar_para_tela_quintenaria():
    global tela_atual
    tela_atual = "quintenaria"

# Função para mudar para a tela sextenaria
def mudar_para_tela_sextenaria():
    global tela_atual
    tela_atual = "sextenaria"

# Função para mudar para a tela login_adm
def mudar_para_tela_login_adm():
    global tela_atual
    tela_atual = "login_adm"

# Função para mudar para a tela login_aluno
def mudar_para_tela_login_aluno():
    global tela_atual
    tela_atual = "login_aluno"

# Função para mudar para a tela criar_conta
def mudar_para_tela_criar_conta():
    global tela_atual
    tela_atual = "criar_conta"

# Inicialização do pygame
pygame.init()

largura = 800
altura = 600
tela = pygame.display.set_mode((largura, altura))
pygame.display.set_caption("Jardim De Darwin")

imagem_carregamento = pygame.image.load("Imagem_de_carregamento.jpg")
imagem_carregamento = pygame.transform.scale(imagem_carregamento, (largura, altura))

nova_imagem = pygame.image.load("Imagem_de_login.png")
nova_imagem = pygame.transform.scale(nova_imagem, (largura, altura))

tela_atual = "principal"

# Loop principal do jogo
while True:
    for evento in pygame.event.get():
        if evento.type == pygame.QUIT:
            sair_jogo()

    if tela_atual == "principal":
        tela_principal()
    elif tela_atual == "terciaria":
        tela_terciaria()
    elif tela_atual == "quaternaria":
        tela_quaternaria()
    elif tela_atual == "quintenaria":
        tela_quintenaria()
    elif tela_atual == "sextenaria":
        tela_sextenaria()
    elif tela_atual == "login_adm":
        tela_login_adm()
    elif tela_atual == "login_aluno":
        tela_login_aluno()
    elif tela_atual == "criar_conta":
        tela_criar_conta()
