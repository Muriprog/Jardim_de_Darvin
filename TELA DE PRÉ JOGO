import pygame
import sys

# Função para sair do jogo
def sair_jogo():
    pygame.quit()
    sys.exit()

# Função para criar botões
def criar_botao(x, y, largura, altura, texto="", acao=None):
    mouse_pos = pygame.mouse.get_pos()
    click_mouse = pygame.mouse.get_pressed()

    botao = pygame.Rect(x, y, largura, altura)

    # Verifica se o mouse está sobre o botão
    if botao.collidepoint(mouse_pos):
        cor_botao = (0, 255, 0, 128)  # Cor verde com 50% de transparência
        if click_mouse[0] == 1 and acao is not None:
            acao()
    else:
        cor_botao = (0, 255, 0, 64)  # Cor verde com 25% de transparência

    # Criar uma superfície temporária para desenhar o botão
    superficie_botao = pygame.Surface((largura, altura), pygame.SRCALPHA)
    pygame.draw.rect(superficie_botao, cor_botao, botao, border_radius=5)
    tela.blit(superficie_botao, (x, y))

# Inicialização do pygame
pygame.init()

# Configurações da tela
largura = 800
altura = 600
tela = pygame.display.set_mode((largura, altura))
pygame.display.set_caption("VAI CORINTHIANS")

# Carregar a imagem de carregamento
imagem_carregamento = pygame.image.load("Imagem_de_carregamento.jpg")
imagem_carregamento = pygame.transform.scale(imagem_carregamento, (largura, altura))

# Loop principal do jogo
while True:
    for evento in pygame.event.get():
        if evento.type == pygame.QUIT:
            pygame.quit()
            sys.exit()

    # Preencher a tela com a imagem de carregamento
    tela.blit(imagem_carregamento, (0, 0))

    # Criar botões
    criar_botao(300, 280, 200, 45, "", sair_jogo)
    criar_botao(300, 210, 200, 45, "", sair_jogo)
    criar_botao(300, 415, 200, 45, "", sair_jogo)
    criar_botao(300, 350, 200, 45, "", sair_jogo)

    # Atualizar a tela
    pygame.display.flip()
