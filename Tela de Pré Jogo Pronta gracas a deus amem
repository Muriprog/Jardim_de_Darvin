import pygame
import sys

# Função para sair do jogo
def sair_jogo():
    pygame.quit()
    sys.exit()

# Função para criar botões
def criar_botao(x, y, largura, altura, texto="", acao=None):
    mouse_pos = pygame.mouse.get_pos()
    click_mouse = pygame.mouse.get_pressed()

    botao = pygame.Rect(x, y, largura, altura)

    if botao.collidepoint(mouse_pos):
        cor_botao = (0, 255, 0, 0)  
        if click_mouse[0] == 1 and acao is not None:
            acao()
    else:
        cor_botao = (0, 255, 0, 0)  

    superficie_botao = pygame.Surface((largura, altura), pygame.SRCALPHA)
    superficie_botao.fill((0, 0, 0, 0))  
    pygame.draw.rect(superficie_botao, cor_botao, superficie_botao.get_rect(), border_radius=5)

    if texto != "":
        fonte = pygame.font.Font(None, 36)
        texto_surface = fonte.render(texto, True, (255, 255, 255))
        texto_rect = texto_surface.get_rect(center=(largura / 2, altura / 2))
        superficie_botao.blit(texto_surface, texto_rect)

    tela.blit(superficie_botao, (x, y))

# Função para a tela principal
def tela_principal():
    tela.blit(imagem_carregamento, (0, 0))
    criar_botao(300, 150, 200, 45, " ", mudar_para_tela_alternativa)
    criar_botao(300, 220, 200, 45, " ", mudar_para_tela_terciaria)
    criar_botao(300, 290, 200, 45, " ", mudar_para_tela_quaternaria)
    criar_botao(300, 360, 200, 45, " ", mudar_para_tela_quintenaria)
    criar_botao(300, 430, 200, 45, " ", mudar_para_tela_quintenaria)
    pygame.display.flip()

# Função para a tela alternativa
def tela_alternativa():
    tela.blit(nova_imagem, (0, 0))
    pygame.display.flip()

# Função para a tela terciária
def tela_terciaria():
    tela_personalizada = pygame.image.load("configuracao.png")
    tela_personalizada = pygame.transform.scale(tela_personalizada, (largura, altura))
    tela.blit(tela_personalizada, (0, 0))
    pygame.display.flip()

# Função para a tela quaternária
def tela_quaternaria():
    tela_personalizada = pygame.image.load("acessibilidade.png")
    tela_personalizada = pygame.transform.scale(tela_personalizada, (largura, altura))
    tela.blit(tela_personalizada, (0, 0))
    pygame.display.flip()

# Função para a tela quintenária
def tela_quintenaria():
    tela_personalizada = pygame.image.load("ranking.png")
    tela_personalizada = pygame.transform.scale(tela_personalizada, (largura, altura))
    tela.blit(tela_personalizada, (0, 0))
    pygame.display.flip()

# Função para mudar para a tela alternativa
def mudar_para_tela_alternativa():
    global tela_atual
    tela_atual = "alternativa"

# Função para mudar para a tela terciária
def mudar_para_tela_terciaria():
    global tela_atual
    tela_atual = "terciaria"

# Função para mudar para a tela quaternária
def mudar_para_tela_quaternaria():
    global tela_atual
    tela_atual = "quaternaria"

# Função para mudar para a tela quintenária
def mudar_para_tela_quintenaria():
    global tela_atual
    tela_atual = "quintenaria"

# Inicialização do pygame
pygame.init()

largura = 800
altura = 600
tela = pygame.display.set_mode((largura, altura))
pygame.display.set_caption("VAI CORINTHIANS")

imagem_carregamento = pygame.image.load("Imagem_de_carregamento.jpg")
imagem_carregamento = pygame.transform.scale(imagem_carregamento, (largura, altura))

nova_imagem = pygame.image.load("Imagem_de_login.png")
nova_imagem = pygame.transform.scale(nova_imagem, (largura, altura))

tela_atual = "principal"

# Loop principal do jogo
while True:
    for evento in pygame.event.get():
        if evento.type == pygame.QUIT:
            sair_jogo()

    if tela_atual == "principal":
        tela_principal()
    elif tela_atual == "alternativa":
        tela_alternativa()
    elif tela_atual == "terciaria":
        tela_terciaria()
    elif tela_atual == "quaternaria":
        tela_quaternaria()
    elif tela_atual == "quintenaria":
        tela_quintenaria()
